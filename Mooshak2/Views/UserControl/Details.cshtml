@model Mooshak2.Models.UserDetailViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.user.UserName)</h2>

<div>
    <h4>Details</h4>
    <hr />
    
    <div class="ass-detail">

        <p class="ass-l">
            <label class="ass-l">Email:  </label>
        </p>

        <p class="ass-p">
            @Html.DisplayFor(model => model.user.Email)
        </p>
    </div>
</div>
@if (Model.courses.Count() != 0)
{
    <h4>Courses this user is in</h4>
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                </th>
            </tr>
            @foreach (var item in Model.courses)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Remove From Course", "RemoveCourse", new { userName = Model.user.UserName, courseId = item.Id}) |   
                    </td>
                </tr>
            }
        </table>
}
else
{
    <h4>This user is currently not in any Courses</h4>
}
<p>
    @Html.ActionLink("Edit User", "Edit", new { id = Model.user.Id }) |
    @Html.ActionLink("Delete User", "Delete", new { id = Model.user.Id }) |
    @Html.ActionLink("Assign New Course", "AddCourse", new { id = Model.user.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
