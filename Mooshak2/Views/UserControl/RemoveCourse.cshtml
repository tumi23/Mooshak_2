@model Mooshak2.Models.RemoveCourseViewModel

@{
    ViewBag.Title = "RemoveCourse";
}

<h2>Remove from Course</h2>

<h3>Are you sure you want remove @Html.DisplayFor(model => model.UserName) from @Html.DisplayFor(model => model.courseName)?</h3>
<div>
    <h4>StudentCourseList</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Username
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            Course name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.courseName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remove" class="btn btn-default" /> |
            @Html.ActionLink("Back to Details", "Details", new { id = Model.userId})
        </div>
    }
</div>
