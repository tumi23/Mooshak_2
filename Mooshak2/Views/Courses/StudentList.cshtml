@model IEnumerable<Mooshak2.Models.CourseStudentViewModel>

@{
    ViewBag.Title = "Student List";
}

<h2>Index</h2>

<p class="btn btn-default" role="button">
    @Html.ActionLink("+", "Create")
</p>
<hr />
<table class="table">
    <tr>
        <th>
            Username
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Edit User", "Edit", "UserControl", new { id = item.userId }, null) |
                    @Html.ActionLink("Delete User", "Delete", "UserControl", new { id = item.userId }, null) |
                    @Html.ActionLink("User Details", "Details", "UserControl", new { id = item.userId }, null)
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.userId })
                </td>
            }
        </tr>
    }

</table>
