@model Mooshak2.Models.CourseDeleteViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete @Html.DisplayNameFor(model => model.Name)</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <br />
    @if (Model.assignments.Count() != 0)
    {
    <h3>These Assignments will also be deleted</h3>
    <table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
    </tr>
    @foreach (var item in Model.assignments)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
    }
    </table>
    }
    else
    {
        <h4>There are no Assignments in this Course that will be deleted alongside @Html.DisplayFor(model => model.Name)</h4>
    }

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
