@model Mooshak2.Models.AssignmentDetailViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete @Html.DisplayFor(model => model.Assignments.Name)</h2>

<h3>Are you sure you want to delete this Assignment?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Assignments.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Assignments.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Assignments.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Assignments.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Assignments.DateOfAssigned)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Assignments.DateOfAssigned)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Assignments.DateOfSubmittion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Assignments.DateOfSubmittion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Assignments.AllowedProgrammingLanguage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Assignments.AllowedProgrammingLanguage)
        </dd>
    </dl>
    <br />
    @if(Model.Milestones.Count() != 0)
    {
        <h4>These Milestones will also be deleted</h4>
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
            </tr>
            @foreach (var item in Model.Milestones)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)%
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <h4>There are no Milestones in this assignment that will be deleted alongside @Html.DisplayFor(model => model.Assignments.Name)</h4>
    }
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
        <hr />
        @Html.ActionLink("Back to List", "Index")
    }
</div>
